	<bean id="buyDao" class="org.nhom8.csdl.BuyDaoImpl" />
	<bean id="eDao" class=" org.nhom8.csdl.EmployeeDaoImpl" />
	<bean id="sDao" class="org.nhom8.csdl.SystemDaoImpl" />

